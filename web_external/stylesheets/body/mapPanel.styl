#m-map-panel
  height 100% !important
  width 100% !important

.m-map-panel-map
  width 100%
  height 100%
  
  &:focus
    outline none

  .geojs-scale-widget-bar
    stroke #505050

  .geojs-scale-widget-text
    color #505050
    font-weight normal
    font-size 14px
    font-family inherit

.m-map-legend-container
  position: absolute
  z-index: 400
  bottom: 0
  left: 0

button.m-screenshot
  background-color white
  border-style none
  padding 0
  width 27px
  height 27px
  border-radius 14px

  &:hover
    background-color #eee
    i
      color #66a
