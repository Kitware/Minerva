.m-dataset-sharing
  .modal-body
    max-height 500px
    overflow-y auto

  table
    border 1px solid #afafaf
    width 100%

    tr
      border-bottom 1px solid #afafaf

      &:nth-child(even)
        background #f3f3f3

      td, th
        padding 3px 30px

      th
        text-align center

      td
        &.dataset-name

        &.checkbox-container
          text-align center
