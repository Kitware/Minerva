.modal-dialog
  .modal-content
    form#m-wms-point-style-form.modal-form(role="form")
      .modal-header
        button.close(data-dismiss="modal", aria-hidden="true", type="button") &times;
        h4.modal-title
          | Style Wms Points
      .modal-body
        .row
          .col-md-4
            .form-group
              label.control-label(for="m-attribute") Attribute
              select#m-attribute.form-control
                each attribute in attributes
                  option(value= attribute)= attribute
          .col-md-4
            .form-group
              label.control-label(for="m-color-ramp") Color Ramp
              select#m-color-ramp.form-control.m-select-ramp(
                data-feature=feature, data-property=rampKey)
                each ramp, name in ramps
                  option(data-content!=ramp.display, data-ramp-name=name)= name
          .col-md-4
            .form-group
              label.control-label(for="m-marker") Marker
              select#m-marker.form-control
                each marker in markers
                  option(value= marker)= marker
      .modal-footer
        button#foobar.btn.btn-small.btn-primary
          i.icon-plus-squared
          | Save Style
        a.btn.btn-small.btn-default(data-dismiss="modal") Cancel
