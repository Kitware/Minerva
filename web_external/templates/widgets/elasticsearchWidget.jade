.modal-dialog
  .modal-content
    form#m-elastic-search-form.modal-form(role="form")
        .modal-header
          button.close(data-dismiss="modal", aria-hidden="true", type="button") &times;
          h4.modal-title
            | Elastic Search
        .modal-body
          .form-group
            label.control-label(for="m-elastic-search-query") Query
            input.input-sm#m-elastic-search-query.form-control(type="text", placeholder="Enter query")
        .modal-footer
            a.btn.btn-small.btn-default(data-dismiss="modal") Cancel
            button.m-run-elastic-search.btn.btn-small.btn-primary(type="submit")
                i.icon-play-circled
                | Run
